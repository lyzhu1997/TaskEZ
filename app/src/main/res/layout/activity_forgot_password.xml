<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.ForgotPasswordActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager23"
        android:layout_width="900px"
        android:layout_height="300px"
        android:background="#C1FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.12" />

    <EditText
        android:id="@+id/fgtPasswordEmail"
        android:layout_width="650px"
        android:layout_height="150px"
        android:ems="10"
        android:hint="Enter Your Email to Reset Password"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewPager23"
        app:layout_constraintEnd_toEndOf="@+id/viewPager23"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/viewPager23"
        app:layout_constraintTop_toTopOf="@+id/viewPager23"
        app:layout_constraintVertical_bias="0.475" />

    <Button
        android:id="@+id/fgtpassResetPasswordBttn"
        android:layout_width="600px"
        android:layout_height="180px"
        android:text="reset password"
        android:textColor="#FFFFFF"
        android:textSize="40px"
        app:backgroundTint="@color/navy_200"
        android:background="@drawable/task_input_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager23"
        app:layout_constraintVertical_bias="0.176" />

    <ImageButton
        android:id="@+id/fgtPassBackBttn"
        android:layout_width="100px"
        android:layout_height="100px"
        android:adjustViewBounds="true"
        android:background="#90FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="450px"
        android:layout_height="450px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>